<div class="home-container">
  <header class="home-header">
    <div class="header-content">
      <h1 class="main-title">Welcome to Flow</h1>
      <p class="subtitle">Streamline your workflow with our powerful tools</p>
    </div>
  </header>

  <main class="main-content">
    <div class="action-buttons">
      <%= link_to "Get Started", login_path, class: "primary-button" %>
      <a href="#features" class="secondary-button">Learn More</a>
    </div>

    <section id="features" class="features-section">
      <h2>Key Features</h2>
      <div class="features-grid">
        <div class="feature-card">
          <div class="feature-icon">🚀</div>
          <h3>Fast & Efficient</h3>
          <p>Optimize your workflow with our streamlined tools</p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">🔒</div>
          <h3>Secure</h3>
          <p>Your data is protected with enterprise-grade security</p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">🤝</div>
          <h3>Collaborative</h3>
          <p>Work together seamlessly with your team</p>
        </div>
      </div>
    </section>
  </main>
</div>